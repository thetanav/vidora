generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Video {
  id          String   @id
  title       String
  description String
  views       Int      @default(0)
  likes       Int      @default(0)
  thumbnail   String   @default("https://placehold.co/1280x720")
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  progress    Int      @default(0)
}

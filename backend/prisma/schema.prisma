generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String?

  // relations
  channels Channel[]        @relation("UserChannels")
  comments Comment[]
  subscriptions Channel[]  @relation("UserSubscriptions")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Channel {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String

  // owner relation
  ownerId   String
  owner     User     @relation("UserChannels", fields: [ownerId], references: [id])

  // relations
  videos       Video[]
  subscribers  User[]   @relation("UserSubscriptions")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Video {
  id          String   @id @default(uuid())
  title       String
  description String
  duration    Int
  views       Int      @default(0)
  likes       Int      @default(0)

  // channel relation
  channelId String
  channel   Channel  @relation(fields: [channelId], references: [id])

  // relations
  comments Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id      String @id @default(uuid())
  text    String

  // relations
  videoId String
  video   Video  @relation(fields: [videoId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
